@model leave_management.Models.CreateEditMauHopDongVM

@{
    ViewData["Title"] = "CreateMauHopDong";
}

<h1>Tạo mẫu hợp đồng</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreateMauHopDong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenMauHopDong" class="control-label"></label>
                <input asp-for="TenMauHopDong" class="form-control" />
                <span asp-validation-for="TenMauHopDong" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaLoaiHopDong" class="control-label"></label>
                @Html.DropDownListFor(q => q.MaLoaiHopDong, new SelectList(Model.LoaiHopDongs, "Value", "Text"), "Chọn loại hợp đồng", new { @class = "form-control" })
                <span asp-validation-for="MaLoaiHopDong" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileMauHopDong" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="FileMauHopDong" class="custom-file-input" id="customFile" accept="application/pdf">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <span asp-validation-for="FileMauHopDong" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Tạo mẫu hợp đồng" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="btn btn-outline-dark">
        <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        Quay lại 
    </a>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
