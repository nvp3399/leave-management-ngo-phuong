@model leave_management.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
}

@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Pending Approval</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>
            @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.LastName
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">
            Approved by
            @if (Model.ApproveBy.Email == "admin@localhost.com")
            {
                <span>Supreme Administrator</span>
            }
            else
            {
                <span><strong>Supreme Administrator</strong></span>

            }
        </h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>
            @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.LastName
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else
{
<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
        Rejected by
        @if (Model.ApproveBy.Email == "admin@localhost.com")
        {
            <span><strong>Supreme Administrator</strong></span>
        }
        else
        {
            <span> @Model.ApproveBy.Firstname @Model.ApproveBy.LastName</span>
        }
    </h4>
    <p>
        <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>
        @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.LastName
    </p>
    <hr />
    <p>
        @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
    </p>
</div>
}





<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee Name
        </dt>
        <dd class="col-sm-10">
            @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.LastName
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRequested)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateActioned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateActioned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Approved == true)
            {
                <span class="badge badge-success">
                    <i class="fa fa-check"></i>
                    Approved
                </span>
            }
            else if (Model.Approved == false)
            {
                <span class="badge badge-danger">
                    <i class="fa fa-times"></i>
                    Rejected
                </span>
            }
            else
            {
                <span class="badge badge-warning">
                    <i class="fa fa-clock-o"></i>
                    Pending
                </span>
            }
        </dd>
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ApprovedById)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ApprovedById)
            </dd>*@
    </dl>
</div>
<div>
    @if (Model.ApproveBy == null)
    {
        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="fa fa-check"></i>
            Approve
        </a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
            <i class="fa fa-remove"></i>
            Reject
        </a>
    }
    <a asp-action="Index" class="btn btn-outline-dark">
        <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        Back to List
    </a>
</div>
