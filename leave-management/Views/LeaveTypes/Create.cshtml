@model leave_management.Models.LeaveTypeVM

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm loại nghỉ phép</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                @*<input asp-for="Comments" class="form-control" />*@
                <textarea asp-for="Comments" class="form-control" rows="3" ></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary col-md-12" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark col-md-12">
        <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        Quay lại danh sách loại nghỉ phép
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
