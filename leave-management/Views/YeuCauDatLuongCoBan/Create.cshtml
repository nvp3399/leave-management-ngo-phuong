@model leave_management.Models.YeuCauDatLuongCoBanVM

@{
    ViewData["Title"] = "Create";
}

    <h1>Yêu cầu đặt lương cơ bản</h1>


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MaNhanVienDuocDatLuong" type="hidden" class="form-control datepicker" />
            </div>

            <div class="form-group">
                <label asp-for="MucLuongCoBan" class="control-label"></label>
                <input asp-for="MucLuongCoBan" class="form-control" />
                <span asp-validation-for="MucLuongCoBan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <input type="submit" value="Gửi yêu cầu" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<a  asp-action="MyRequest" class="btn btn-outline-dark">
    <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
    Quay lại danh sách yêu cầu của tôi
</a>

