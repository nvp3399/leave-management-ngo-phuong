@model leave_management.Models.CreateEditLichSuChamCongVM

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm Lịch sử chấm công</h1>

<h4>Nhân viên: 
    <img src="~/images/@Model.NhanVien.ProfilePicture"
     class="rounded-circle"
     height="40" width="40"
     asp-append-version="true" /> 
    @Model.NhanVien.LastName @Model.NhanVien.MiddleName @Model.NhanVien.FirstName</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MaNhanVien" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ThoiGianBatDau" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ThoiGianKetThuc" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <hr />
            <h3>Thời gian bắt đầu</h3>
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.DropDownListFor(q => q.StartHour, new SelectList(Model.HoursOfDay, "Value", "Text"), "Chọn giờ", new { @class = "form-control" })
                        <span asp-validation-for="StartHour" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.DropDownListFor(q => q.StartMinute, new SelectList(Model.MinutesOfHour, "Value", "Text"), "Chọn phút", new { @class = "form-control" })
                        <span asp-validation-for="StartMinute" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <h3>Thời gian kết thúc</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.DropDownListFor(q => q.EndHour, new SelectList(Model.HoursOfDay, "Value", "Text"), "Chọn giờ", new { @class = "form-control" })
                        <span asp-validation-for="EndHour" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.DropDownListFor(q => q.EndMinute, new SelectList(Model.MinutesOfHour, "Value", "Text"), "Chọn phút", new { @class = "form-control" })
                        <span asp-validation-for="EndMinute" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />




            <div class="form-group">
                <label asp-for="MaLoaiLichBieu" class="control-label"></label>
                @Html.DropDownListFor(q => q.MaLoaiLichBieu, new SelectList(Model.LoaiLichBieus, "Value", "Text"), "Chọn loại lịch biểu", new { @class = "form-control" })
                <span asp-validation-for="MaLoaiLichBieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTienThuongThem" class="control-label"></label>
                <input asp-for="SoTienThuongThem" class="form-control" />
                <span asp-validation-for="SoTienThuongThem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LichSuChamCongList" asp-route-employeeId="@Model.NhanVien.Id">Quay lại danh sách</a>
</div>

