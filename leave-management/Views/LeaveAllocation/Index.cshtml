@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Leave Allocation</h1>
<br />

<table class="table">
    <thead>
        <tr>
            
            <th>
                Leave Types
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
             
                <a asp-action="SetLeave" class="btn btn-outline-dark" asp-route-id="@item.Id">
                    <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                    Allocate To Employees
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
