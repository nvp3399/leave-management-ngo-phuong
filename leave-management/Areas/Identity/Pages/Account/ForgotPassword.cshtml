@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LoginRegister.cshtml";
}

    

    <div class="login-page" style="min-height: 348.391px;">
        <div class="login-box">
            <div class="login-logo">
                <a asp-controller="Home">
                    <i class="fas fa-home "></i>
                    <strong>Quản lý Nhân sự</strong>
                </a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Bạn quên mật khẩu? Đây là cách để bạn dễ dàng lấy lại mật khẩu</p>


                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                            <p asp-validation-for="Input.Email" class="text-danger"></p>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Yêu cầu mật khẩu mới</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <p class="mt-3 mb-1">
                        <a asp-page="Login">Đăng nhập</a>
                    </p>
                    <p class="mb-0">
                        <a asp-page="Register" class="text-center">Đăng ký tài khoản mới</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery -->
        <script src="../../plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="../../dist/js/adminlte.min.js"></script>



    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
