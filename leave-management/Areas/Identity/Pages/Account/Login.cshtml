@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_LoginRegister.cshtml";
}

    <div class="login-page" style="min-height: 512.391px;">
        <div class="login-box">
            <div class="login-logo">
                <a asp-controller="Home">
                    <i class="fas fa-home "></i>
                    <strong>Quản lý nghỉ phép</strong>
                </a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Đăng nhập vào hệ thống</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                            <p asp-validation-for="Input.Email" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>



                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                            <p asp-validation-for="Input.Password" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" asp-for="Input.RememberMe" >
                                    <label asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->



                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    @*<div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                        </a>
                    </div>*@
                    <!-- /.social-auth-links -->




                    <p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword">Tôi quên mật khẩu</a>
                    </p>
                    <p class="mb-0">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Đăng ký tài khoản mới</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
    </div>





