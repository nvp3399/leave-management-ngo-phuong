@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LoginRegister.cshtml";
}

    <div class="register-page" style="min-height: 586.391px;">
        <div class="register-box">
            <div class="register-logo">
                <a asp-controller="Home">
                    <i class="fas fa-home "></i>
                    <strong>Leave Management</strong>

                </a>
            </div>

            <div class="card">
                <div class="card-body register-card-body">
                    <p class="login-box-msg">Register a new account</p>


                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group mb-3">
                            <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="First Name">
                            <p asp-validation-for="Input.FirstName" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Last Name">
                            <p asp-validation-for="Input.LastName" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>


                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                            <p asp-validation-for="Input.Email" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                            <p asp-validation-for="Input.Password" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
                            <p asp-validation-for="Input.ConfirmPassword" class="text-danger"></p>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
